<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--        Title       -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/menu_new"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                android:orientation="vertical">
                <!--     DATE       -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_new_date"
                    android:textSize="18sp" />

                <DatePicker
                    android:id="@+id/newFragmentDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:inputType="text" />

                <!--     ADDRESS       -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_new_address" />

                <EditText
                    android:id="@+id/newFragmentAddress"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <!--     price       -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_new_price" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/newFragmentPrice"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬" />
                </LinearLayout>


                <!--     amount of players       -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_new_amountPlayers" />

                <EditText
                    android:id="@+id/newFragmentAmountPlayers"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <!--     description       -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_new_description" />

                <EditText
                    android:id="@+id/newFragmentDescription"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

                <!--     Campus       -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_new_campus" />

                <Spinner
                    android:id="@+id/newFragmentCampus"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true" />


                <!--     button     -->
                <Button
                    android:id="@+id/newFragmentrequestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_new_button"
                    android:textAlignment="center"
                    android:onClick="newFragmentrequestButton_onClick"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>